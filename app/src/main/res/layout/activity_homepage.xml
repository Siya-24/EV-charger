<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Main UI -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Map Fragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass"
            tools:layout="@layout/layout_preview_placeholder" />

        <!-- Floating Button for Stations -->
        <Button
            android:id="@+id/btnSearchStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Search nearby Station"
            android:backgroundTint="#5DBCCB"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <!-- QR code scan bottom bar -->
        <TextView
            android:id="@+id/scanQR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="Scan QR code 🔍"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#5DBCCB"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <!-- Right-side Drawer Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#5DBCCB"
        app:menu="@menu/nav_drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
