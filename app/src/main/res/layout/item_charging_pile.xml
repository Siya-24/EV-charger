<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">   <!-- âœ… make whole card clickable -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#F7F7F7">

        <!-- Charging Pile ID -->
        <TextView
            android:id="@+id/pileIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: CP001"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Charging Pile Name -->
        <TextView
            android:id="@+id/pileNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Charger A"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <!-- Charging Pile Status -->
        <TextView
            android:id="@+id/pileStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Online"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
