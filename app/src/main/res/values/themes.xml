<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EvChargingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

            <item name="colorPrimary">@color/green_border</item>
            <item name="colorPrimaryVariant">@color/black</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="android:windowBackground">@color/black</item>
            <item name="android:textColorPrimary">@color/white</item>
            <item name="android:textColorSecondary">@color/white</item>
            <item name="colorButtonNormal">@color/black</item>
            <item name="android:colorBackground">@color/black</item>

    </style>

    <style name="SpinnerThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SpinnerDropdown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:popupBackground">?attr/colorSurface</item>
        <!-- or use your theme color, e.g., ?attr/colorBackground or custom color -->
    </style>


    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Make the background transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <!-- Optional: Remove window elevation/shadow if needed -->
        <item name="android:windowElevation">0dp</item>

        <!-- Optional: Disable default dialog padding -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>



</resources>